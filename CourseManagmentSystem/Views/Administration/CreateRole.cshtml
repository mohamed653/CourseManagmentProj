@model CourseManagmentSystem.ViewModels.CreateRoleViewModel;
@{
    ViewBag.Title = "Create New Role";
}

<br/>
<div class=" container-fluid justify-content-center align-items-center w-50 ">
  <div class="card  p-5 ">
        <h1 class="text-center mb-4">Create New Role</h1>
        <form asp-action="CreateRole" asp-controller="Administration">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


