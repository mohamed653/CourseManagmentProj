@model IEnumerable<IdentityRole>;
@{
    ViewBag.Title = "Roles";
}
<h1 class="text-center mb-4">Admin Panel</h1>
<div class="container-fluid m-2">
@if(Model.Any()){
    foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                Role ID: @item.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @item.Name
                </h5>
            </div>
            <div class="card-footer">
                <a  asp-action="EditRole" asp-controller="Administration" asp-route-id="@item.Id"  class="btn btn-primary"> Edit</a>
                <a href="" class="btn btn-danger"> Delete</a>
            </div>
        </div>
    }
}

    <div class="card mt-4">
        <div class="card-header">
            No Roles Have been Created Yet !
            Use the button below to create a role
        </div>
        <div class="card-body">
            <a class="btn btn-primary" style="width:auto" asp-action="CreateRole" asp-controller="Administration">
            Create Role    
            </a>
        </div>
    </div>

<div class="d-flex justify-content-center">
    <a asp-action="ListUsers" class="btn btn-primary  " style=" width:auto"> User List </a>
</div>
</div>
